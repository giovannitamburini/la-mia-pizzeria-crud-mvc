@{
    Layout = "Admin/_MyLayout";
}

@model List<Pizza>

@if (Model.Count() == 0)
{
    <div><strong>Non risultano pizze da mostrare</strong></div>
}
else
{
    <div class="container">

        <div class="row">

            <div class="col-12">

                <h1 class="py-5">PIzzas List</h1>

                <table class="table table-dark table-hover table-bordered border-success caption-top">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price $</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <th scope="row">@pizza.Id</th>
                                <td><img src="@pizza.PathImage" width="100" /></td>
                                <td>@pizza.Name</td>
                                <td>@pizza.Description</td>
                                <td>@pizza.Price $</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>
}